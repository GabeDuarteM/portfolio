{
  "parser": "babel-eslint",
  "env": {
    "jest": true,
    "browser": true
  },
  "globals": {
    "React": true
  },
  "plugins": ["prettier"],
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "no-console": "off",
    "linebreak-style": "off",
    "react/jsx-filename-extension": "off",
    "react/prop-types": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "react/jsx-no-undef": ["error", { "allowGlobals": true }],
    "jsx-a11y/label-has-for": [
      "error",
      {
        "components": [],
        "required": {
          "every": ["id"]
        },
        "allowChildren": false
      }
    ]
  }
}
